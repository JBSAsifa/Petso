<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/Whichpet"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/footprint"
    >

    <!-- Display the selected or captured image -->
    <ImageView
        android:id="@+id/petdetecter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/profile2" />

    <!-- Button to capture an image -->
    <Button
        android:id="@+id/buttonCaptureImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Capture Image" />

    <!-- Button to load an image from the gallery -->
    <Button
        android:id="@+id/buttonLoadImage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Load from Gallery" />

    <!-- Button to detect the pet in the image -->
    <Button
        android:id="@+id/buttonDetectPet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Detect Pet" />

    <!-- Display the result of detection -->
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Detection Result: None"
        android:textSize="16dp" />

</LinearLayout>
